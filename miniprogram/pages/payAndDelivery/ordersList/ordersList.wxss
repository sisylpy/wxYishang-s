
.fragement_content {
  height: 80rpx;
  background: #2d5a5f;
  color: #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  padding: 0 100rpx;
}

.fragement_item {
  color: rgba(255, 255, 255, 0.76);
  font-size: 36rpx;
  font-weight: 400;
  line-height: 80rpx;

  /* background: red; */
}

.active {
  font-size: 38rpx;
  font-weight: 500;
  color: #fff;
}

.sub_fragement_content{
  height: 80rpx;
  background: #2d5a5f;
  color: #fff;
  line-height: 80rpx;
  }


.index {
  width: 50rpx;
  height: 50rpx;
  /* background: red; */
  display: block;
  text-align: center;
}

.index.hide {
  display: none;
}

.circle {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: green;
  display: none;
  border-radius: 50%;
  color: #fff;
  text-align: center;
}

.circle.show {
  display: block;
}

.circle-image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.index-padding{
  padding-left: 70rpx;
  display: flex;
  flex-flow: row wrap;

}