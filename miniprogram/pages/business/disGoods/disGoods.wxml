    </navigator>

  </view>


  <view class="father">

    <view class="one_goods" wx:for="{{goodsList}}" wx:for-item="item" bindtap="addGoods" data-name="{{item.nxGoodsName}}" data-id="{{item.dgDeistributerId}}" data-item="{{item}}">

      <view class="goods_name">{{item.nxGoodsEntity.nxGoodsName}}</view>

      <view class="goods_price">
        <view class="money">¥</view>
        <view class="big">{{item.dgGoodsPrice}}</view>
        <view class="small">.{{item.dgGoodsPriceDecimal}}</view>
        <view class="starndard">/{{item.nxGoodsEntity.nxGoodsStandardname}}</view>
      </view>

      <view class="edit">
        <view class="edit_show">断货</view>
        <view class="edit_price">改价</view>
      </view>

