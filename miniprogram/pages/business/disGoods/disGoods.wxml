


<view>

  <view class="search">
    <navigator url="/pagesCustomer/search/search">
      <view class="search_content with-padding">
        <text class="cate_name">{{fatherName}}</text>
        <icon class="wx_icon" type="search" size="30" color="black"></icon>
      </view>
     

      <!-- 
      <view class="search_content flex-row" style="width:{{windowWidth - 110}}rpx">
