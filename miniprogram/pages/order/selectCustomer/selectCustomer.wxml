<view class='container'>

  <!-- 分店列表 -->
  <view class="main with-padding">

    <!-- 单个分店 -->
    <view class='col-3 {{item.isSelected ? "active" : ""}} ' wx:for='{{pickStoreArr}}' bindtap="isSelected" data-isselected="{{item.isSelected}}" data-index="{{index}}" data-cuCustomerId="{{item.cuCustomerId}}">
      <view class="face">
        <image src="{{item.duWxAvatarUrl}}" class='url {{item.isSelected ? "" : "filter"}}'></image>
      </view>
      <view class="with-padding">{{item.duWxNickName}}</view>
    
    </view>

    <view class='fix-main-btn {{selectedStores > 0 ? "active" : "" }}' bindtap='toGetGoodsFather'>下一步</view>

  </view>





</view>