


.fragement_customer{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  padding: 0 60rpx;
  
}




.index {
  width: 50rpx;
  height: 50rpx;
  /* background: red; */
  display: block;
  text-align: center;
}

.index.hide {
  display: none;
}

.circle {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: green;
  display: none;
  border-radius: 50%;
  color: #fff;
  text-align: center;
}

.circle.show {
  display: block;
}

.circle-image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.index-padding{
  padding-left: 70rpx;
  display: flex;
  flex-flow: row wrap;

}

.shareBtn{
  background: none;
  font-size: 28rpx;
  padding: 20rpx 0;


}

.buy-goods{
  flex-basis: 60%;
}
.buy-words{
  flex-basis: 40%;
}