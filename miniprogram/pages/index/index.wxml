<import src='../../template/catalogue/catalogue.wxml' />


<view class="wrapper">

	<!-- fragement -->
	<view class='fragement'>
		<!-- fragement -->
		<view class="fragement_content">

			<view class="fragement_item {{itemIndex == 0 ? 'active': ''}}" bindtap="toStore">
				<text class=" ">客户</text>
			</view>

			<!-- <view class="fragement_item {{itemIndex == 1 ? 'active': ''}}">
				<text class="" >订单</text>
			</view> -->

			<!-- <view class='fragement_item'>
        <text class="selfword {{itemIndex == 1 ? 'active': ''}}">进菜</text>
      </view> -->

			<view class="fragement_item {{itemIndex == 2 ? 'active': ''}}" bindtap="toStore">
				<text class="">我</text>
			</view>
		</view>
		<!-- ./fragement_content -->
	</view>
	<!-- ./fragement -->



	<view class="content-wrapper fix-wrapper">

		<swiper bindchange="switchTab" style="height: {{windowHeight - 80}}rpx;">

			<!-- Part-three -->
			<swiper-item>
				<!-- <template is="catalogue" data='{{showIndex:showIndex, goodsList:goodsList, windowWidth:windowWidth,windowHeight:windowHeight, url:url}}'></template> -->
				<view class="content-wrapper">
					<!-- swiper -->

					<scroll-view scroll-y="true" style="height: {{windowHeight}}rpx;">
						<!-- nav -->
						<view class="nav nav-pills">
							<view class=''>
								<!-- 商品 -->
								<view class='nav_pill_body with-border-bottom with-padding' bindtap="toPurchase" hover-class="hover">
									<!-- <image class="icon" src="../../images/add.jpg"></image> -->
									<text class="nav_text">备货</text>
									<text class="text-sm"></text>
								</view>

								<!-- 送货路线 -->
								<!-- <view class='nav_pill_body  with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}' bindtap="toGoods">
                  <text class="nav_text">客户</text>
                </view> -->

								<!-- 客户 -->
								<navigator url="/pages/restaurant/myCode/myCode">

									<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}'>
										<!-- <image class="icon" src="../../images/add.jpg"></image> -->
										<text class="nav_text">添加新客户</text>
									</view>
								</navigator>


								<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}' bindtap="toRestaurantList">
									<!-- <image class="icon" src="../../images/add.jpg"></image> -->
									<text class="nav_text">客户</text>
								</view>

								<!-- 帐款 -->
								<!-- <view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}'>
                  <text class="nav_text">帐款</text>
                </view> -->
								<!-- 设备 -->
								<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}' bindtap="kanakn">
									<!-- <image class="icon" src="../../images/add.jpg"></image> -->
									<text class="nav_text">送货路线</text>
								</view>

							</view>
						</view>
						<!-- ./nav -->


						<view class="box">

							<view class="fold">
								<view class="apply-total with-padding flex-row" bindtap="clickShowBuyer" hover-class="hover">
									<image class="icon margin-right" src="../../images/order.jpg" mode="aspectFit" animation="{{buyAnimation}}"></image>
									<text class="text-lg text-weight-500">今日订单</text>
									<!-- <text class="text-sm">({{bill.length}}家)</text> -->
								</view>
							</view>

							<view class="fold-content {{showCustomer ? 'active' : ''}}">
								<view class="fold-item with-border-bottom" wx:for="{{customerArr}}" wx:for-item="item" data-id="{{item.disUserId}}" bindtap="toBuyerPage" hover-class="hover">
									<image class="userUrl margin-right" src="{{item.nxDepartmentFilePath}}"></image>
									<view class="flex-column">
										<text>{{item.nxDepartmentName}}</text>
										<text class="explain-words">订单: {{item.orderAmount}}个
                    </text>
									</view>
								</view>
							</view>


							<!-- <view class="fold flex-row-between">
								<view class="apply-total with-padding flex-row" bindtap="clickShowPicker" hover-class="hover">
									<image class="icon margin-right" src="../../images/order.jpg" mode="aspectFit" animation="{{pickAnimation}}"></image>
									<text class="text-lg text-weight-500">昨天订单</text>
								</view>
							
							</view> -->

							<view class="fold-content {{showPicker ? 'active' : ''}}">
								<view class="fold-item with-border-bottom" wx:for="{{pickerArr}}" wx:for-item="item" data-id="{{item.nxDistributerUserId}}" bindtap="toPickerPage" hover-class="hover">
									<image class="userUrl margin-right" src="{{item.nxDiuWxAvartraUrl}}"></image>
									<view class="flex-column">
										<text>{{item.nxDiuWxNickName}}</text>
										<text class="explain-words">订单: {{item.orderAmount}}个
                    </text>
									</view>
								</view>
							</view>

						</view>


					</scroll-view>
				</view>

			</swiper-item>

			<!--  -->

			<swiper-item>
				<view class="content-wrapper">
					<!-- swiper -->

					<scroll-view scroll-y="true" style="height: {{windowHeight - 80}}rpx;">

						<!-- nav -->
						<view class="nav nav-pills margin_l_bottom">
							<!-- 商品 -->
							<view class='nav_pill_body with-border-bottom with-padding' bindtap="toPurchase" hover-class="hover">
								<!-- <image class="icon" src="../../images/add.jpg"></image> -->
								<text class="nav_text">备货</text>
								<text class="text-sm"></text>
							</view>

							<!-- 店铺 -->
							<view class='nav_pill_body with-padding with-border-bottom' bindtap="toPickerOrder" hover-class="hover">
								<!-- <image class="icon" src="../../images/add.jpg"></image> -->
								<text class="nav_text">拣货</text>
								<text class="text-sm"></text>
							</view>

							<view class='nav_pill_body with-padding' bindtap="toPayAndDeliverOrder" hover-class="hover">
								<text class="nav_text">报价</text>
								<!-- <text class="text-sm">({{father.fatherAmount}}1个)</text> -->
							</view>

						</view>
						<!-- ./nav -->

						<!-- box -->
						<view class="box">

							<view class="fold">
								<view class="apply-total with-padding flex-row" bindtap="clickShowBuyer" hover-class="hover">
									<image class="icon margin-right" src="../../images/order.jpg" mode="aspectFit" animation="{{buyAnimation}}"></image>
									<text class="text-lg text-weight-500">采购员</text>
									<!-- <text class="text-sm">({{bill.length}}家)</text> -->
								</view>
							</view>

							<view class="fold-content {{showBuyer ? 'active' : ''}}">
								<view class="fold-item with-border-bottom" wx:for="{{buyerArr}}" wx:for-item="item" data-id="{{item.disUserId}}" bindtap="toBuyerPage" hover-class="hover">
									<image class="userUrl margin-right" src="{{item.nxDiuWxAvartraUrl}}"></image>
									<view class="flex-column">
										<text>{{item.nxDiuWxNickName}}</text>
										<text class="explain-words">订单: {{item.orderAmount}}个
                    </text>
									</view>
								</view>
							</view>


							<view class="fold flex-row-between">
								<view class="apply-total with-padding flex-row" bindtap="clickShowPicker" hover-class="hover">
									<image class="icon margin-right" src="../../images/order.jpg" mode="aspectFit" animation="{{pickAnimation}}"></image>
									<text class="text-lg text-weight-500">拣货员</text>
									<!-- <text class="text-sm">({{weighUserArr.length}})</text> -->
								</view>
								<!-- <view class="text-lg right text-weight-500" bindtap="addPickFirstStep" hover-class="hover">+</view> -->
							</view>

							<view class="fold-content {{showPicker ? 'active' : ''}}">
								<view class="fold-item with-border-bottom" wx:for="{{pickerArr}}" wx:for-item="item" data-id="{{item.nxDistributerUserId}}" bindtap="toPickerPage" hover-class="hover">
									<image class="userUrl margin-right" src="{{item.nxDiuWxAvartraUrl}}"></image>
									<view class="flex-column">
										<text>{{item.nxDiuWxNickName}}</text>
										<text class="explain-words">订单: {{item.orderAmount}}个
                    </text>
									</view>
								</view>
							</view>

						</view>
					</scroll-view>
				</view>
			</swiper-item>
			<!--  -->

			<!-- ./Part-three -->

			<swiper-item>

				<view class="content-wrapper">
					<!-- swiper -->

					<scroll-view scroll-y="true" style="height: {{windowHeight}}rpx;">
						<!-- nav -->
						<view class="nav nav-pills">
							<view class=''>


								<!-- 送货路线 -->
								<!-- <view class='nav_pill_body  with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}' bindtap="toGoods">
                  <text class="nav_text">客户</text>
                </view> -->

								<!-- 客户 -->
								<navigator url="/pages/restaurant/myCode/myCode">

									<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}'>
										<!-- <image class="icon" src="../../images/add.jpg"></image> -->
										<text class="nav_text">经营主页</text>
									</view>
								</navigator>

								<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}' bindtap="toRestaurantList">
									<!-- <image class="icon" src="../../images/add.jpg"></image> -->
									<text class="nav_text">员工管理</text>
								</view>

								<!-- 帐款 -->
								<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}}' bindtap="toIbook">
									<!-- <image class="icon" src="../../images/add.jpg"></image> -->
									<text class="nav_text">商品目录</text>
								</view>

								<!-- 快速订货 -->
								<view class='nav_pill_body with-padding {{applyArr.length == 1 || applyArr.length == index + 1 ? "is-last" : ""}} flex-row-between' bindtap="toChoicePrinter">
									<text class="nav_text" >打印机</text>
									<text style="font-size: 26rpx;">{{deviceId}}</text>
								</view>
							</view>
						</view>
						<!-- ./nav -->
					</scroll-view>
				</view>

			</swiper-item>


		</swiper>
	</view>







</view>