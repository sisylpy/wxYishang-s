<view class="with_bottom_padding customerPage">

	<view class='whiteBack top_bar flex-row with-lr-padding with-l-margin-bottom' style="height: 120rpx;">
		<image src="{{userInfo.nxDiuWxAvartraUrl}}" class="top_img"></image>
		<text class="top_bar_title">上货</text>
	</view>

	<view class='plusBtnOperation whiteBack {{selectedArr.length > 0 ? "is-active1" : ""}} with-padding with-border-bottom'>

		<view class='fixView  {{scrollTop > 120 * scale ? "fixed" : ""}} '>

			<view class='with-tb-padding gray flex-row-wrap '>
				<view class="sel_item" wx:for="{{selectedArr}}" wx:for-item="sel">
					<text>{{sel.nxGoodsEntity.nxGoodsName}}</text>
					<text>{{sel.nxDpgQuantity}}{{sel.nxDpgStandard}}
					</text>
				</view>
			</view>
			

		</view>

	</view>

	<view class="emptyView {{purArr.length > 0  ? 'hidden' : ''}}" style="height: {{windowHeight - 240}}rpx; text-align:center;">

			<view class="shamao  with-padding flex-column" style="margin-top:{{(windowHeight - 240)/2 - 120}}rpx;">
			<view class="normal">
			这里暂时还没有上货商品!
			</view>
			<view class="small">
			你可以打开
				<image class="icon_order_sentence" src="../../images/goodshei.png"></image>
				查询订单添加或者在自己的商品中添加！
			</view>
				
			</view>


	</view>



	<view class=' flex-column  whiteBack'>

		<view class=' with-border-bottom ' wx:for='{{purArr}}' wx:for-item="item" wx:for-index='index' wx:key='this' hover-class="hover" bindtap="selectPurchaseGoods" data-index="{{index}}" data-id="{{item.nxDistributerPurchaseGoodsId}}">
			<view class="flex-row with-padding">
				<text class='squre {{item.isSelected ? "is-active" : ""}}'></text>
				<view class=" flex-row with-stb-padding normal">
					<text class="margin-right ">{{item.nxGoodsEntity.nxGoodsName}}</text>
					<text class="margin-l-right">{{item.nxDpgQuantity}}{{item.nxDpgStandard}}</text>
					<view class="flex-row" wx:if="{{item.nxDpgTime !== null && item.nxDpgPurchaseType !== -1}}">
						<text class="opeartion_time">您于{{item.nxDpgTime}}</text>
						<view class="opertaion_name flex-row" wx:if="{{item.nxDpgPurchaseType == 1}}">
							<image src="../../images/itemSel.png" class="icon"></image>
							<text>复制</text>
						</view>

						<view class="opertaion_name flex-row" wx:if="{{item.nxDpgPurchaseType == 2}}">
							<image src="../../images/duihao.png" class="icon"></image>
							<text>微信转发</text>
						</view>

						<view class="opertaion_name flex-row" wx:if="{{item.nxDpgPurchaseType == 3}}">
							<image src="../../images/download.png" class="icon"></image>
							<text>完成</text>
						</view>

						<view wx:else>
						</view>
					</view>



				</view>
			</view>

			<!-- <view class="margin_right orderAmount">
				<view wx:if="{{item.nxDpgPurchaseType == 1}}" class="flex-row">
					<block wx:for="{{item.nxDpgOrdersAmount}}" wx:for-index="amountIndex" wx:for-item="amount">
						<view class="orderCircle"></view>
					</block>
					<text class="mainColor small">{{item.nxDpgOrdersAmount}}个订单</text>
				</view>
				<view wx:if="{{item.nxDpgPurchaseType == 2}}" class="flex-row margin_right">
					<image class="icon margin-right" src="../../images/order.jpg"></image>
				</view>
			</view>
			 -->
			<view>
			</view>
		</view>
	</view>

	<!-- /// -->


	<!-- hourPart -->
	<view class="flex-column time_part" wx:for="{{}}" wx:for-item="batch">

		<!-- hour -->
		<view class="time_title">
			<text class="hour" wx:if="{{batch.nxDpbDate == today}}">{{batch.nxDpbHour}}:{{batch.nxDpbMinute}}</text>

			<text wx:else class="hour">昨天{{batch.nxDpbHour}}:{{batch.nxDpbMinute}}</text>


		</view>

		<view class="time_body">

			<view class="">
				<view class="type">
					<image src="../../images/location.png" class="type_icon"></image>
				</view>
			</view>

			<view class="type_content_wrapper felx-column  ">
				<view class="type_content_top with-padding">
					<view class="type_words" wx:if="{{batch.nxDpbType == 1}}">{{}}打印</view>
					<view class="type_words" wx:elif="{{batch.nxDpbType == 2}}">{{}}复制</view>
					<view class="type_words" wx:elif="{{batch.nxDpbType == 3}}">{{}}采购</view>
					<view class="type_words" wx:elif="{{batch.nxDpbType == 4}}">{{}}微信转发</view>
					<view class="type_words" wx:else>完成</view>
					<view></view>
					<view class="type_time flex-row">
						<image src="../../images/del.png" class="time_icon"></image>
						<!-- <text>05:12</text> -->
					</view>
				</view>
				<view class="type_content with-padding " style="width: {{windowWidth - 200}}rpx;">
					<view wx:for="{{batch.nxDPGEntities}}" wx:for-item="purGoods" wx:for-index="purIndex">
						<text class="margin-right">{{purIndex + 1}}</text>
						<text>{{purGoods.nxGoodsEntity.nxGoodsName}} {{purGoods.nxDpgQuantity}}{{purGoods.nxDpgStandard}}</text>
					</view>
				</view>
				<view class="flex-row-end type_btn_gourp with-padding">
					<view class="type_btn">修改</view>
					<view class="type_btn">完成</view>
				</view>

			</view>

		</view>


		<!-- ./hour -->
	</view>
	<!-- ./hourPart -->





	<!-- .// -->

</view>

<!--  showSucess -->
<view class='plusBtn {{ selectedArr.length > 0  ? "hidden" : ""}}' style="left:{{windowWidth - 160}}rpx">

	<view class="order_btn" bindtap="toApplyGoods">
		<image class="icon_order" src="../../images/goods.png"></image>
	</view>
</view>



<view class='plusBtn plusBtnOperation {{ selectedArr.length > 0 ? "is-active" : ""}}' style="left:{{windowWidth - 160}}rpx">
	<view class="flex-column-center btn_item">
		<view class="add_btn" bindtap="copyText">
			<image class="icon_order" src="../../images/goods.png"></image>
		</view>
		<text class="btn_text">复制</text>
	</view>

	<view class="flex-column-center btn_item">

		<button class="add_btn" open-type="share" bindtap="toShare">
			<image class="icon_order" src="../../images/goods.png"></image>
		</button>
		<text class="btn_text">微信预定</text>

	</view>

	<view class="flex-column-center btn_item margin-bottom-none">
		<view class="add_btn" bindtap="finishIndependent">
			<image class="icon_order" src="../../images/goods.png"></image>
		</view>
		<text class="btn_text ">完成</text>

	</view>
</view>