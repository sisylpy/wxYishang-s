
  <!-- fragement -->
  <view class='fragement'>
    <!-- fragement -->
    <view class="fragement_content">
      <view class="fragement_item {{itemIndex == 0 ? 'active': ''}}" bindtap="swichNav" data-current="0">
        <text class="">今天</text>
      </view>

      <view class="fragement_item {{itemIndex == 1 ? 'active': ''}}" bindtap="swichNav" data-current="1">
        <text class="">明天</text>
      </view>
    </view>
    <!-- ./fragement_content -->
  </view>
  <!-- ./fragement -->



  <view class="content-wrapper fix-wrapper">

    <swiper bindchange="switchTab" current="{{itemIndex}}" style="height: {{windowHeight - 78}}rpx;">

      <!-- zero -->
      <swiper-item>
        <view class="noData {{todayArr.length > 0 ? 'hide' : ''}}" style="line-height: {{windowHeight - 178}}rpx; width:{{windowWidth}}rpx; ">
          没有订单
        </view>

        <scroll-view scroll-y="true" style="height: {{windowHeight -  78}}rpx;">
          <view class="content">

            <view class="" wx:for="{{todayArr}}" wx:for-item="item" class="with-border-bottom with-padding {{index == todayArr.length - 1 ? 'is-last' : ''}}" hover-class="hover" hover-class="hover" bindtap="choiceisPayingOrder" data-index="{{index}}" data-what="0"
              data-isSelected="{{item.isSelected}}">

            
            </view>
          </view>
          <view style="{{todayWeightOrderAmount > 0 ?'height: 120rpx' : ''}}"></view>
        </scroll-view>
       
       
      </swiper-item>
      <!-- ./zero -->

      <!-- one -->
      <swiper-item>
        <view class="noData {{tomorrowArr.length > 0 ? 'hide' : ''}}" style="line-height: {{windowHeight - 178}}rpx; width:{{windowWidth}}rpx; ">
          没有订单
        </view>

        <scroll-view scroll-y="true" style="height: {{windowHeight - 78}}rpx;">
          <view class="content">

            <view class="" wx:for="{{tomorrowArr}}" wx:for-item="item" class="with-border-bottom with-padding {{index == tomorrowArr.length - 1 ? 'is-last' : ''}}" hover-class="hover" hover-class="hover" bindtap="choiceisPayingOrder" data-index="{{index}}" data-what="1">

              <view class="flex-row">
                <view>
                  <text class="margin-right index {{item.isSelected ? 'hide' : ''}}">{{index + 1}}</text>
                  <view class="margin-right circle {{item.isSelected ? 'show' : ''}}">v
                    <!-- <image class="circle-image" src="/images/logo.jpg"></image> -->
                  </view>
                </view>

                <view class="flex-column">
                 <text class="">{{item.nxOrdersServiceDate}}日 {{item.nxOrdersServiceTime}}</text>
                  <text class="">{{item.nxOrdersCommunity}} {{item.nxOrdersCommunityBuilding}}</text>
                </view>
              </view>

              <view class="index-padding">
                <view class="margin-right" wx:for="{{item.nxOrdersSubEntities}}" wx:for-item="goods" wx:for-index="goodsIndex">
                  <text class="small" wx:if="{{goodsIndex  !== order.nxOrdersSubEntities.length - 1}}">{{goods.nxGoodsEntity.nxGoodsName}} {{goods.nxOsQuantity}}{{goods.nxOsStandard}},</text>
                  <text class="small" wx:else>{{goods.nxGoodsEntity.nxGoodsName}} {{goods.nxOsQuantity}}{{goods.nxOsStandard}}</text>
                </view>
              </view>
            </view>
          </view>
          <view style="{{tomorrowWeightOrderAmount > 0 ?'height: 120rpx' : ''}}"></view>
        </scroll-view>
        <view class="bottom_btn  {{tomorrowWeightOrderAmount > 0 ? 'show' : ''}}" bindtap="assignUnWeightOrder">
          打印 明天拣货单{{tomorrowWeightOrderAmount}}个
        </view>
      </swiper-item>
    </swiper>
  </view>

