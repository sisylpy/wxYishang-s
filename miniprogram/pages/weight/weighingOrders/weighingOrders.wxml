<view class="">


	<view class="flex-column with-padding with-border-bottom  {{index == orderArr.length - 1 ? 'is-last' : '' }} " wx:for="{{orderArr}}" wx:for-index="index" bindtap='customerApplys' id="{{item.nxOrdersId}}" data-index="{{index}}">
		<!-- content -->
		<view class="flex-row">
			<view>
				<text class="margin-right index {{item.isSelected ? 'hide' : ''}}">{{index + 1}}</text>
				<view class="margin-right circle {{item.isSelected ? 'show' : ''}}">v
					<!-- <image class="circle-image" src="/images/logo.jpg"></image> -->
				</view>
			</view>
			<text class=''>{{item.nxCustomerEntity.nxCommunityEntity.nxCommunityName}}{{item.nxCustomerEntity.nxCustomerName}} {{item.nxCustomerEntity.nxCustomerAddress}}</text>
		</view>
		<view class="flex-row-between">
			<text class="explain-words margin-right">商品:{{item.nxOrdersSubAmount}}个</text>
			<text class="explain-words">已称重:{{item.nxOrdersSubFinished}}个</text>
		</view>
	</view>







 <view class="bottom_btn  {{pickOrderAmount > 0 ? 'show' : ''}}" bindtap="toOrderDetail">
          称重客户{{pickOrderAmount}}个
        </view>



