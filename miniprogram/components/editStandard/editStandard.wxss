/* components/shareButton/mymodal.wxss */

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  /* display: flex; *//* justify-content: center; */
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9995;
  padding-left: 5%;
  padding-right: 5%;
}

.modal-content {
  width: 90%;
  height: 50%;
  left: 5%;
  top: 3%;
  background-color: #fff;
  position: fixed;
}

.top {
  height: 20%;
  width: 100%;
  background: rgb(27, 27, 27);
  display: flex;
  flex-flow: column nowrap;
  justify-items: center;
  justify-content: center;
}

.goodsTitle {
  font-size: 60rpx;
  color: white;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  /* background: yellow; */
  padding: 10rpx 20rpx;
}

.smallclose {
  width: 50rpx;
  height: 50rpx;
  line-break: 60rpx;
  border: 2px solid white;
  border-radius: 50%;
  float: right;
  margin-right: 10rpx;
  font-size: 36rpx;
  text-align: center;
}

