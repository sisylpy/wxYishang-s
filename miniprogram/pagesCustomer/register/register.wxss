/* pagesCustomer/register/register.wxss */

.top-back {
  height: 120rpx;
  /* background: #152502; */
  z-index: -1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  justify-items: center;
}

.top-words {
  font-size: 40rpx;
  align-items: center;
  justify-content: center;
  align-content: center;
  font-weight: 500;
}

.words-one {
  color: #fff;
}

.words-two {
  color: #e69705;
}

.top-img {
  height: 120rpx;
  width: 100%;
  position: absolute;
  top: 0;
  z-index: -2;
}

/*  */

.address {
  /* background: yellow; */
  margin-bottom: 20rpx;
  font-size: 34rpx;
  /* color: red; */
}

.reg-explain {
  flex-basis: 20%;
  /* background: green; */
}

.input-row {
  flex-basis: 80%;
  /* background: red; */
}

.buildingInput {
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
  border-bottom: 1px solid lightgray;
}

/*  */

.section {
  /* background: red; */
  position: relative;
}

.result {
  background: #fff;
  border: 1px solid lightgray;
  position: absolute;
  top: 100rpx;
  width: 100%;
  height: 450rpx;
  z-index: 999;
  display: none;
}

.result.is-active {
  display: block;
}

.result-row {
  /* background: green; */
  width: 100%;
  line-height: 70rpx;
 
  padding: 10rpx 10rpx;

  border-bottom: 1px solid lightgray;
}

/* ./ */

.second-row {
  justify-content: flex-end;
}

.btn {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 28rpx;
}

.btn.is-active {
  border-radius: 10rpx;
  background: #fb0;
}

.third-row {
  margin-left: 20%;
  margin-top: 20rpx;
}

/*  */

.btn button {
  background: rgba(197, 197, 197, 0.795);
  width: 50%;
  line-height: 60rpx;
  margin: 20rpx auto;
  text-align: center;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  border: none;

}
.btn button.is-active{
 background: #fb0;
}
