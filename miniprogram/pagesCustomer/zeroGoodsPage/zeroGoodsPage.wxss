.orderBack{
  width: 100%;
  background: #fff;
  display: flex;
  flex-flow: column nowrap;
  
}


.one_row{

  flex-basis: 70%;
  /* background: yellow; */
   display: flex;
  flex-flow: row nowrap;
  align-items: center;
  align-content: center;
  justify-content: center;
  justify-items:  center;

}
.second_row{
  flex-basis: 30%;
  /* background: blue; */
  display: flex;
  flex-flow: row nowrap;
  /* align-items: center; */
  align-content: center;
  justify-content: center;
  justify-items:  center;
  align-items: flex-end;
    

  
}

.second_row_content{
  display: flex;
  flex-flow: row nowrap;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border: 1px solid lightgray;
  border-bottom: none;
  padding-left: 20rpx;
  padding-right: 20rpx;
 
}




.third-row{
  line-height: 110rpx;
  height: 112rpx;
  background: #000;
  color: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: fixed;
  left: 0;
  right: 0;
  /* display: none; */

}
.inputNumber{

  line-height: 90rpx;
  text-align: center;
  width: 100rpx;
  border-bottom: 1px solid rgb(100, 100, 100);
  margin-left: 30rpx;
  margin-right: 10rpx;
  
}

.option_item{
  line-height: 80rpx;
  width: 80rpx;
  /* background: red; */
  text-align: center;
  font-size: 40rpx;

}

.options_number{
  padding:  0 10rpx;
  font-size: 38rpx;
  width: 50rpx;
  text-align: center;
}

.split{
  width: 1px;
  background: lightgray;
  height: 76rpx;
  margin-top: 2rpx;
}
