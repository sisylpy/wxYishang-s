      </view>
    </view> -->


  </view>


  <view>

    <view class="whole">
      <navigator url="../signTejia/signTejia">
        <view class="one-tejia" bindtap="toTejia">
          <image class="one-img" src="../../images/tejia2.jpg"></image>
          <text class="goods_name"> 今日特价</text>
        </view>
      </navigator>

    </view>



    <view class="whole">
      <view class="one" wx:for="{{goodsList}}" wx:for-item="one" bindtap="clickFather" data-id="{{one.nxCfgGoodsFatherId}}" data-fathername="{{one.nxCfgGoodsFatherName}}">
        <image class="one-img" src="{{server +  one.nxCfgGoodsFatherImg}}"></image>
        <text class="goods_name"> {{one.nxCfgGoodsFatherName}}</text>
      </view>
    </view>














  </view>






</view>

<view style="{{applyArr.length > 0 ?'height: 130rpx' : ''}}"></view>


<timemodal show="{{show}}" applyRemark="{{remarkContent}}" applyGoodsName="{{applyGoodsName}}" bindgetRemark="getRemark" bindconfirm="confirm" bindchangeStandard="changeStandard" applyGoodsId="{{applyGoodsId}}" item="{{item}}" applyStandardName="{{applyStandardName}}"
/>

<carPage show="{{showCar}}" windowHeight="{{windowHeight}}" windowWidth="{{windowWidth}}" bindadd="add" bindreduce="reduce" bindemptyApplyArr="emptyApplyArr" carArr="{{applyArr}}" />

<template is="car" data='{{applyArr:applyArr, applyNumber:applyNumber}}'></template>