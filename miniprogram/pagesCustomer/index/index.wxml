      <view class="flex-column-center">
        <image class="icon" src="../../images/duihao.png"></image>
        <text class="with-tb-padding">家庭成员</text>
      </view>
      <view class="flex-column-center">
        <image class="icon" src="../../images/location.png"></image>
        <text class="with-tb-padding">常订菜</text>
