<import src='../../template/car/car.wxml' />

<view class="customerPage">


  <view class="card ">

    <!-- -->
    <view class="card_container " style="height: {{(windowWidth - windowWidth/5) * 0.618 }}rpx">

      <view class="card_left">

        <!-- 1， logo_begin -->
        <view class="logo flex-row" bindtap="toCaidiPage">
          <view class=" flex-column">
            <text class="area_name">CaiDi</text>
            <text class="smallBlack">悦榕湾服务点</text>
          </view>
        </view>


        <!--2， member_begin -->

        <view class="member flex-row" bindtap="toUserPage">
          <text>{{userInfo.nxCustomerUserEntity.nxCuWxNickName}} </text>
          <text>></text>
        </view>

        <!--3， points_begin -->
        <view class="points flex-row">
          <view class="points_total" bindtap="toAllOrders">
            <text class="toOrderHistory">订单查询 </text>
            <text class="toOrderHistory">></text>
          </view>
          <!-- <view class="toOrderHistory" bindtap="toOrderHistory"  >我的常购菜品</view> -->
        </view>
      </view>

      <view class="card_right">
        <image class="card_right_img" src="../../images/cd.png"></image>
      </view>
    </view>
  </view>




  <view class="top">
    <view class="top_content">

      <view class="top_first flex-column" wx:if="{{userTime.dayName}}">
        <view class="wx_name">{{userTime.method}} | {{userTime.dayName}}{{userTime.dayTime}}</view>
      </view>
      <view class="top_first flex-column" wx:else>
        <view class="wx_name">最早送达 {{multiArray[0][0]}}{{multiArray[1][0]}}{{multiArray[2][0]}}</view>
      </view>
      <view class="userTime">
        <view class="appointment">

          <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{customerChoice}}" value="{{multiIndex}}" range="{{multiArray}}">
            我要预约
          </picker>
        </view>
        <view class="split"></view>

        <view class="flex-column-center" bindtap="toMyGoodsDetail">
          <image class="face" src="{{userInfo.nxCustomerUserEntity.nxCuWxAvatarUrl}}"></image>
          <text class="face_name">我的菜</text>
        </view>
      </view>
    </view>



