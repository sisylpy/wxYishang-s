<view class="container">

  <view class="top-back">
    <view class="top-words flex-row">
      <text class="words-one">订菜到</text>
      <text class="words-two">家</text>
    </view>
    <image class="top-img" src="/images/back.png" mode="center"></image>
  </view>

  <view class="with-padding">


    <!-- address -->
    <view class="address flex-column">
      <view class="flex-row">
        <text class="reg-explain">地址:</text>
        <view class="input-row flex-row">
          <!-- <image class="icon" src="/images/location.png"></image> -->

          <view class="section">
            <!--  bindinput="bindAddressInput" -->
            <input class="buildingInput" type="text" placeholder="小区名称" placeholder-style='color:#9a9a9a;' value="{{userInfo.customerAddress}}" ></input>

            <scroll-view scroll-y class="sug_info result {{showSug ? 'is-active' : ''}}">
              <view class="result-row " wx:for="{{sugData}}" wx:item="item" bindtap="clickAddress" data-index="{{index}}">
                {{item.name}}
              </view>
            </scroll-view>
          </view>

        </view>

      </view>

      <view class="second-row flex-row">
        <view class="input-row flex-row">
          <input class="buildingInput" type="text" placeholder="请完善详细地址(楼号-门牌号)" placeholder-style='color:#9a9a9a;' value="{{userInfo.customerBuilding}}" bindinput="bindBuildingInput"></input>
        </view>
      </view>

    </view>

    <!-- ./addreww -->




    <!-- person -->
    <view class="address flex-column">
      <view class="flex-row">
        <text class="reg-explain">联系人:</text>
        <view class="input-row flex-row">
          <input class="buildingInput" type="text" placeholder="姓名" placeholder-style='color:#9a9a9a;' value="{{userInfo.customerName}}" bindinput="bindNameInput"></input>
        </view>
      </view>

      <view class="flex-row">
        <view class="input-row  third-row flex-row">
          <text class="btn  {{userInfo.customerCall == 1 ? 'is-active' : ''}}" bindtap="selectCall" data-call="1">先生</text>
          <text class="btn {{userInfo.customerCall == 2 ? 'is-active' : ''}} " bindtap="selectCall" data-call="2">女士</text>
        </view>
      </view>

    </view>

    <!-- ./person -->


    <!-- phone -->
    <view class="address flex-column">
      <view class="flex-row">
        <text class="reg-explain">电话:</text>
        <view class="input-row flex-row">
          <input class="buildingInput" type="number" placeholder="手机号" placeholder-style='color:#9a9a9a;' value="{{userInfo.customerPhone}}" bindinput="bindPhoneInput"></input>
        </view>
      </view>
    </view>

    <view class="saveAddress {{canLogin ? 'is-active' : ''}}" bindtap="updateMember">保存</view>

