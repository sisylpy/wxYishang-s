/* pages/memberRecords/memberRecords.wxss */

.main {
  display: flex;
  flex-flow: column wrap;
  padding: 20rpx 30rpx 20rpx 30rpx; 

}

.top{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 90rpx;
  background: gold;

}
.recordlist{
  display: flex;
  flex-flow: column wrap;


}
.item{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid lightgray;
  padding: 40rpx 0;

}

/* left */
.left{
  display: flex;
  flex-flow: column wrap;

}

.date{
  font-size: 30rpx;
  color: gray;

}

.content{
  font-size: 36rpx;
  display: flex;
  flex-flow: row nowrap;
}

.title{
  margin-right: 10rpx;
}
