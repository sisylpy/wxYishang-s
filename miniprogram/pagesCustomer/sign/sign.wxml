<page>

  <view class="try">
    <view class="search">
      <navigator url="/pagesCustomer/search/search">
        <view class="search_content with-padding">
          <text class="cate_name">{{fatherName}}</text>
          <icon class="wx_icon" type="search" size="30" color="white"></icon>
        </view>
      </navigator>
    </view>
    <view class="father">      
      <view class="one_goods"  wx:for="{{goodsList}}" bindtap="showGoodsPage" wx:for-item="item"  data-id="{{item.nxCommunityGoodsId}}" data-name="{{item.nxGoodsEntity.nxGoodsName}}" data-index="{{index}}" data-type="{{item.nxCgGoodsSellType}}">
      <!-- <view class="select_circle {{}}" style="width:50rpx; height:50rpx;line-height:50rpx;margin-left:{{(windowWidth - 230) / 3}}rpx;">{{item.dgGoodsOrderAmount}}{{item.dgGoodsSellStandardName}}</view> -->
        <view class="goods_name {{item.isSelected ? 'is-active': ''}}">{{item.nxGoodsEntity.nxGoodsName}}</view>
        <view class="goods_price">
          <view class="money">Â¥</view>
          <view class="big">{{item.nxCgGoodsPrice}}</view>
          <view class="small">.{{item.nxCgGoodsPriceDecimal}}</view>
          <view class="starndard">/{{item.nxGoodsEntity.nxGoodsStandardname}}</view>
        </view>
        <view class="options  {{item.isSelected ? 'hidden' : ''}}" data-index="{{index}}" data-name="{{item.nxGoodsEntity.nxGoodsName}}" data-id="{{item.nxGoodsEntity.nxGoodsId}}" data-item="{{item}}" data-standard="{{item.nxGoodsEntity.nxGoodsStandardname}}">
          <view class="place">
            <text class="place-words">{{item.nxGoodsEntity.nxGoodsDetail}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</page>












