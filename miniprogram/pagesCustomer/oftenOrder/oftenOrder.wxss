/* third-scroll */
.third_scroll {
  top: 0;
  left: 0;
  height: 130rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 130rpx;
  background: whitesmoke;
  font-size: 36rpx;
  white-space: nowrap;
  position: fixed;
 
  /* border-top: 1px solid rgba(220, 220, 220, 0.363); */
}

.third_scroll_item {
  display: inline-block;
  color: rgb(114, 114, 114);
}

.third_scroll_item {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.third_item.active {
  position: relative;
  color: black;
}

.third_scroll_item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: black;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;
}

